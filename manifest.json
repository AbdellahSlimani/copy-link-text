{
  "manifest_version": 2,
  "name": "Copy Link Text",
  "version": "1.0",
  "description": "Adds a context menu option to copy the text of a link.",
  "permissions": ["contextMenus", "clipboardWrite"],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
